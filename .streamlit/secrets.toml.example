# Copy this file to secrets.toml and fill in your API keys
# DO NOT commit secrets.toml to git!

# OpenRouter API key (for LLM calls)
# Get one at: https://openrouter.ai/keys
OPENROUTER_API_KEY = "sk-or-v1-your-key-here"

# Pinecone API key (for vector search)
# Get one at: https://app.pinecone.io/
PINECONE_API_KEY = "your-pinecone-key-here"

# Pinecone index name
PINECONE_INDEX_NAME = "gitabae"

# LLM model to use via OpenRouter
LLM_MODEL = "openai/gpt-3.5-turbo"

# Embedding model (used during ingestion, not at runtime)
EMBEDDING_MODEL = "text-embedding-ada-002"
